#include<iostream>
using namespace std;

int main(void)
{
	int N, prime = 1, i;
	
	cout << "Enter N: ";
	cin  >> N;
	
	for(i = 2; i < N; i++)
	{
	    if(N % i == 0)
	        {
			  prime = 0;
		      cout << "N is not a prime number";
			  return -1;
			}
	}
	
	cout << "\nN is a prime number";
	
	return 0;
}
